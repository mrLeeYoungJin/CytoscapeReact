{
  "presets": ["react", "es2015", "stage-0"],
  "plugins": [
    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "actions": "./actions",
        "config": "./config",
        "rest": "./rest",
        "router": "./router",
        "reducers": "./reducers",
        "components": "ui/components",
        "containers": "ui/containers",
        "css": "ui/css",
        "topoedit": "topology/edit",
        "topodata": "topology/data"
      }
    }]
  ],
  "env": {
    "development": {
      "presets": ["react-hmre"]
    }
  }
}
